:80 {
  # API unter /financetracker/api/*  (Subpfad)
  handle_path /financetracker/api* {
    reverse_proxy financetracker-api:8080
  }

  # API auch direkt am Root: /api/*  (damit Frontend, das /api/... nutzt, funktioniert)
  handle_path /api* {
    reverse_proxy financetracker-api:8080
  }

  # Frontend (Vite) unter Subpfad /financetracker/*
  handle_path /financetracker/* {
    reverse_proxy financetracker-web:5173
  }

  respond "Not found" 404
}