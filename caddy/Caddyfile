:80 {

  @root path /
  redir @root /financetracker/ 301

  @ft_noslash path /financetracker
  redir @ft_noslash /financetracker/ 301

  handle /financetracker/api* {
    uri strip_prefix /financetracker
    reverse_proxy financetracker-api:8080
  }

  handle /financetracker* {
    uri strip_prefix /financetracker
    reverse_proxy financetracker-web:5173
  }

  handle {
    respond "Not found" 404
  }
}